{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"incremental": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"esModuleInterop": true
	},
	"typeAcquisition": {
		"enable": true
	},
	"include": [
		"next-env.d.ts",
		"additional.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"**/*.d.ts",
		"**/*.js",
		"**/*.jsx"
	],
	"exclude": ["node_modules"]
}
